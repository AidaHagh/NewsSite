@model AboutUsViewModel
@{
    ViewData["Title"] = "ثبت درباره ما";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}


<div class="content">

    <div class="panel panel-heading panelstyle" >
        <span style="font-weight:bold;" >
            <i class="fa fa-align-left"></i>
            فرم @ViewData["Title"]
        </span>
    </div>


    <div class="panel panel-body container-fluid panelstyle" >
       
        <form asp-controller="AboutUs" asp-action="Create" method="post">
            <div class="col-md-12 col-xs-12">

                <!--Description-->
                <div>
                    <label asp-for="AboutDes" class="control-label col-md-3 col-xs-12 "></label>
                    <div class="col-md-12 col-xs-12">
                        <textarea asp-for="AboutDes" type="text" class="form-control custominput" placeholder="توضیحات..." autocomplete="off"></textarea>
                        <span asp-validation-for="AboutDes" class="text-danger"></span>
                        <script src="~/site/lib/ckeditor/ckeditor.js"></script>
                        <script type="text/javascript">
                            CKEDITOR.replace('AboutDes')
                        </script>
                    </div>
                </div>


                <div class="col-xs-12 form-group" style="margin-top:15px;">

                    <input type="submit" style="border:1px solid gray; border-radius:3px;"
                           value="ذخیره اطلاعات" class="btn customGreen1 pull-right" />

                    <a asp-controller="AboutUs" asp-action="Index" style="border:1px solid gray; border-radius:3px; margin-left:20px"
                       value="برگشت" class="btn customRed pull-right">بازگشت</a>

                </div>
            </div>
        </form>
    </div>

</div>

